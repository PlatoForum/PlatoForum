<% if @action == "dislike" %>
	<a class="label label-danger" href="<%= neutral_comment_path(@c) %>" data-remote="true"><i class="fa fa-check fa-fw"></i> <%= @c.dislikes.count %></a>
<% else %>
	<a class="label label-danger" href="<%= dislike_comment_path(@c) %>" data-remote="true"><i class="fa fa-thumbs-down fa-fw"></i> <%= @c.dislikes.count %></a>
<% end %>