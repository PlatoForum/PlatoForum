$("#comment_pool").append("<%= escape_javascript(render 'td_show_comment') %>");
$("#comment_pool").addClass('<%= @comment.id %>');
$(".holder_<%= @comment.id %>").replaceWith($("#comment_<%= @comment.id %>_full").html());
activate_media();

<% if params[:with_ref] and params[:with_ref] == "true" %>
	$("#reference_pool").append("<%= escape_javascript(render 'td_comment_reference') %>");
	$("#ref-container").html($("#comment_<%= @comment.id %>_ref").html());
<% else %>
	$(".read_<%= @comment.id %>").html("<span class='label label-default'><i class='fa fa-check fa-fw'></i> </span>");
	$(".tr_<%= @comment.id %>.unread").removeClass("unread");
<% end %>