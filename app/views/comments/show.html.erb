<ul class="breadcrumb" style="margin-bottom: 5px;">
    <li><%= link_to "Home", root_path %></li>
    <li><%= link_to @target.name, "/#{@target.permalink}/" %></li>
    <li class="active">檢視評論</li>
</ul>

<a data-toggle="modal" href="#myModal" class="btn btn-primary btn-large">Launch demo modal</a>

<div class="bs-component">
  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h4 class="modal-title">Modal title</h4>
        </div>
        <div class="modal-body">
          <p>One fine body…</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
</div>

<p>
  <strong>Topic:</strong>
  <%= @comment.target.description %>
</p>

<p>
  <strong>Author:</strong>
  <%= @comment.owner.pseudonym %>
</p>

<p>
  <strong>Subject:</strong>
  <%= @comment.subject %>
</p>

<p>
  <strong>Body:</strong>
  <%= @comment.body %>
</p>

<%= link_to 'Edit', edit_comment_path(@comment), class: 'btn'  %>
<button onClick="returnPage(2)" class="btn">Back</button>
