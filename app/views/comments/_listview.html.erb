<div class="row">
  <div class="col-xs-12">
<div class="expandable-boxes">
  <% only_one_stance = (@topic.stances.count == 1) %>
  <% @topic.stances.sort!{|a,b| a.number <=> b.number}.each do |stance| %>

  <div <% unless only_one_stance %>class="expandable-box expandable-box-<%= @topic.stances.count %>"<% end %>>
      <div class="panel <%= stance.panel.nil? ? "panel-default" : "panel-"+stance.panel %>">
        <a class="expand-btn">
        <div class="panel-heading">
          <h3 class="panel-title">
            <% if only_one_stance %>
              未分類
            <% else %>
              <%= stance.description.nil? ? stance.comments[0].body[0,10] + "⋯⋯" : stance.description %>
            <% end %>
          </h3>
        </div>
        </a>

        <div class="panel-body">          
          <% if stance.comments.count == 0 %>
            <p class="text-muted">這裡有點冷清⋯⋯</p>
          <% else %>
            <table class="table table-striped table-hover ">
              <tbody id="comment_list_stance<%= stance.number %>">
                <% first_item = true %>
                <% stance.comments[0,5].each do |comment| %>
                  <tr id="tr_<%= comment.id %>" onclick="click_tr('<%= comment.id %>');">
                    <% unless session[:user_id].nil? %>
                    <td width="10" id="read_<%= comment.id %>">
                      <% if @proxy.read_comments.find(comment.id) %>
                        <span class="label label-default"><i class="fa fa-check fa-fw"></i> </span>
                      <% else %>
                        <span class="label label-warning"><i class="fa fa-exclamation fa-fw"></i> </span>
                      <% end %>
                    </td>
                    <% end %>
                    <td class="td_short" id="td_<%= comment.id %>_short">
                      <span class="text-muted"><% if (comment.owner == @proxy)%>你<%else%><%=comment.owner.display_name%><%end%></span>：<% if first_item %><%= comment.subject %><br><% end %><span class="text-default"><%= first_item ? comment.display_body_short : comment.display_abstract %></span>
                    </td>
                    <td class="td_full" id="td_<%= comment.id %>_full" style="display: none;"></td>
                  </tr>
                  <% first_item = false %>
                <% end %>
              </tbody>
            </table> 

          <% end %>
          
          <% if stance.comments.count > 5 %>
          <center><a id="show_more_stance<%= stance.number %>" href="/<%= @topic.permalink %>/comments/more_stance_<%= stance.number %>/5" data-remote="true">更多⋯⋯</a><i id="spin_stance<%= stance.number %>" class="fa fa-spinner fa-spin" style="display: none;"></i></center>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
</div>

<script type="text/javascript">
function expand(data) {

}
function click_tr(data) {
  if( !$("#tr_"+data).hasClass('open') )
  {
    $("#tr_"+data).addClass("open");

    var expandable = $("#tr_"+data).parents().eq(4);;
    $('.expandable-box').not(expandable).addClass('out');
    expandable.addClass('open');

    if ( !$("#tr_"+data).hasClass('loaded') ) {

      $("#td_"+data+"_short").hide();
      $("#td_"+data+"_full").show();
      $("#td_"+data+"_full").html("<center><i class='fa fa-spin fa-spinner fa-2x'></i></center>");

      $.ajax({
        url: "/<%= @topic.permalink%>/comment_" + data,
        dataType: "script"
      });
    }
    else {
      $("#td_"+data+"_short").hide();
      $("#td_"+data+"_full").addClass("out");
      $("#td_"+data+"_full").show();
      $("#td_"+data+"_full").removeClass("out").addClass("open");
    }        
  }
  else
  {
    $("#td_"+data+"_short").show();
    $("#td_"+data+"_full").hide();
    $("#tr_"+data).removeClass("open");
  }
  return false;
}
</script>

<div id="comment_modal" class="modal fade"></div>