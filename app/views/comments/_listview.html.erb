<div class="row">
  <div class="col-xs-12">
    <div class="expandable-boxes" name="main-well">
      <% only_one_stance = (@topic.stances.count == 1) %>
      <% @topic.stances.sort!{|a,b| a.number <=> b.number}.each do |stance| %>

      <div <% unless only_one_stance %>class="expandable-box expandable-box-<%= @topic.stances.count %>"<% end %>>
          <div class="panel <%= stance.panel.nil? ? "panel-default" : "panel-"+stance.panel %>">
            <a class="expand-btn">
              <div class="panel-heading">
                <h3 class="panel-title">
                  <% if only_one_stance %>
                    未分類
                  <% else %>
                    <i class="fa fa-caret-left fa-fw stance-back" style="display: none;"></i> <%= stance.description.nil? ? stance.comments[0].body[0,10] + "⋯⋯" : stance.description %>
                  <% end %>
                </h3>
              </div>
            </a>

            <div class="panel-body">          
              <% if stance.comments.count == 0 %>
                <p class="text-muted">這裡有點冷清⋯⋯</p>
              <% else %>
                <table class="table table-striped table-hover ">
                  <tbody id="comment_list_stance<%= stance.number %>">
                    <% stance.comments[0,5].each do |comment| %>
                      <tr class="show_comment_tr" id="tr_<%= comment.id %>" onclick="click_tr('<%= comment.id %>');">
                        <% unless session[:user_id].nil? %>
                        <td width="10" class="read_<%= comment.id %>">
                          <% if @proxy.read_comments.find(comment.id) %>
                            <span class="label label-default"><i class="fa fa-check fa-fw"></i> </span>
                          <% else %>
                            <span class="label label-warning"><i class="fa fa-exclamation fa-fw"></i> </span>
                          <% end %>
                        </td>
                        <% end %>
                        <td class="td_short" id="td_<%= comment.id %>_short">
                          <span class="text-muted"><% if (comment.owner == @proxy)%>你<%else%><%=comment.owner.display_name%><%end%></span>：<span class="text-default"><%= comment.display_abstract %></span>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table> 

              <% end %>
              
              <% if stance.comments.count > 5 %>
              <center><a id="show_more_stance<%= stance.number %>" href="/<%= @topic.permalink %>/comments/more_stance_<%= stance.number %>/5" data-remote="true">更多⋯⋯</a><i id="spin_stance<%= stance.number %>" class="fa fa-spinner fa-spin" style="display: none;"></i></center>
              <% end %>
            </div>
          </div>
      </div>
      <script type="text/javascript">
        $("#show_more_stance<%= stance.number %>").click(function (){
          $("#show_more_stance<%= stance.number %>").hide();
          $("#spin_stance<%= stance.number %>").show();
        });
      </script>
      <% end %>
      <div class="expandable-box expandable-box-main out">
        <div id="main-container" class="well main-well"></div>
      </div>
    </div>
  </div>
</div>

<div id="comment_pool">Comment pool</div>
<div id="comment_modal" class="modal fade"></div>
<div id="reply_modals"></div>