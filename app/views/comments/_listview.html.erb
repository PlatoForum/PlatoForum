<div class="row">

  <% @topic.stances.sort!{|a,b| a.number <=> b.number}.each do |stance| %>
  <div class="col-md-4">
    <div class="bs-component">
      <div class="panel <%= "panel-"+stance.panel unless stance.panel.nil? %>">
        <a  href="/<%= @topic.permalink %>/stance_<%= stance.number %>">
        <div class="panel-heading">
          <h3 class="panel-title"><%= stance.description %></h3>
        </div>
        </a>

        <div class="panel-body">
          
          <% if stance.comments.count == 0 %>
            <p class="text-muted">這裡有點冷清⋯⋯</p>

          <% else %>

            <table class="table table-striped table-hover ">
              <tbody>
                <% stance.comments.sort!{|b,a| a.likes.count <=> b.likes.count}.first(10).each do |comment| %>
                  <tr onClick="document.location = '/comments/<%= comment.id %>';">
                    <td width="10">
                      <span class="label label-success">讚 <%= comment.likes.count %></span> 
                      <span class="label label-danger">爛 <%= comment.dislikes.count %></span>
                    </td>
                    <td><% if (comment.owner == @proxy)%>你<%else%><%=comment.owner.display_name%><%end%>：<span class="text-muted"><%= comment.body[0,20] %><%= "⋯⋯" if comment.body.length > 20 %></span></td>
                    <td class="text-primary visible-sm" align="right"><% if comment.doc.strftime("%F") == Time.zone.now.strftime("%F") %>今天 <%= comment.doc.strftime("%T") %><% else %><%= comment.doc.strftime("%F") %><% end %></td>
                  </tr>
                <% end %>
              </tbody>
            </table> 

          <% end %>
        </div>
      </div>
    </div>
    </div>
  <% end %>
</div>
  

