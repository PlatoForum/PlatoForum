<div class="row">

  <div class="col-md-4">
    <div class="bs-component">

      <div class="panel panel-success">
        <a href="/<%= @target.permalink %>/stance1">
        <div class="panel-heading">
          <h3 class="panel-title">支持</h3>
        </div>
        </a>

        <div class="panel-body">
          <table class="table table-striped table-hover ">

            <tbody>
              <% @comments.each do |comment| %>
              <% if comment.stance == 1 %>
              <tr onClick="document.location = '/comments/<%= comment.id %>';">
                <td width="10">
                  <span class="label label-success">讚 <%= comment.likes.count %></span> 
                  <span class="label label-danger">爛 <%= comment.dislikes.count %></span>
                </td>
                <td><%= "（沒有主旨）" if comment.subject == "" %><%= comment.subject %></td>
                <td class="text-muted hidden-xs"><%= comment.body[0,20] %><%= "⋯⋯" if comment.body.length > 20 %></td>
                <% if comment.doc.strftime("%F") == Time.zone.now.strftime("%F") %>
                  <td class="text-primary" align="right">今天 <%= comment.doc.strftime("%T") %></td>
                <% else %>
                  <td class="text-primary" align="right"><%= comment.doc.strftime("%F") %></td>
                <% end %>
              </tr>
              <% end %>
              <% end %>
            </tbody>
          </table> 
        </div>
      </div>

    </div>
  </div>
