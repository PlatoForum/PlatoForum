<div class="bs-component">
  <div class="modal fade" id="modal_notify_single">
    <div class="modal-dialog">
      <div class="modal-content">

        <form accept-charset="UTF-8" action="/admin/notify_aaaaaaaaaaaaaaaaaaaaaaaa" class="form-horizontal" id="notify_single" method="get">

          <fieldset>

            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
              <h4>對使用者送出通知</h4>
            </div>
            
            <div class="modal-body">
              <div class="form-group">
                <label for="description" class="col-sm-2 control-label">內容</label>
                <div class="col-sm-10">
                  <input class="form-control" id="source_id" name="message" placeholder="廣播內容">
                </div>
              </div>

              <div class="form-group">
                <label for="name" class="col-sm-2 control-label">連結</label>
                <div class="col-sm-10">
                  <input class="form-control" id="destination_id" name="url" placeholder="http://" value="http://">
                  <span class="help-block">完整網址</span>
                </div>
              </div>
            </div>

            <div class="modal-footer">
              <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                  <input class="btn btn-primary" name="commit" type="submit" value="送出">
                  <button href="#" data-dismiss="modal" class="btn btn-default">返回</button>
                </div>
              </div>
            </div>

          </fieldset>

        </form>
      </div>
    </div>
  </div>
</div>