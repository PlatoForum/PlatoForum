<div class="row">

  <div class="col-md-12">
    <div class="bs-component">

      <div class="panel 
      <% if @stance.number == 1 %>
        panel-success
      <% elsif @stance.number == 2 %>
        panel-warning
      <% elsif @stance.number == 3 %>
        panel-danger
      <% end %>
        ">
        <div class="panel-heading">
          <h3 class="panel-title">
            <ul class="nav navbar-right">
              <li class="dropdown active">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  排列依照 <span class="caret"></span>
                </a>
              <ul class="dropdown-menu">
                <li class="active"><a href="#like_count" data-toggle="tab">讚！</a></li>
                <li class=""><a href="#comment_time" data-toggle="tab">評論時間</a></li>
              </ul>
              </li>
            </ul>
            <%= @stance.description %>
          </h3>
        </div>
        <div class="panel-body">
          <% if @stance.comments.count == 0 %>
            <p class="text-muted">這裡有點冷清⋯⋯</p>

          <% else %>


          <div id="myTabContent" class="tab-content">

            <div class="tab-pane fade active in" id="like_count">
              <table class="table table-striped table-hover ">
                <tbody>
                  <% @stance.comments.sort!{|b,a| a.likes.count <=> b.likes.count }.each do |comment| %>
                  <tr onClick="document.location = '/comments/<%= comment.id %>';">
                    <td width="10">
                      <span class="label label-success">讚 <%= comment.likes.count %></span> 
                      <span class="label label-danger">爛 <%= comment.dislikes.count %></span>
                    </td>
                    <td><% if (comment.owner == @proxy)%>你<%else%><%=comment.owner.pseudonym%><%end%>：<span class="text-muted"><%= comment.body[0,20] %><%= "⋯⋯" if comment.body.length > 20 %></span></td>
                    <td class="text-primary hidden-xs" align="right"><% if comment.doc.strftime("%F") == Time.zone.now.strftime("%F") %>今天 <%= comment.doc.strftime("%T") %><% else %><%= comment.doc.strftime("%F") %><% end %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

            <div class="tab-pane fade" id="comment_time">
              <table class="table table-striped table-hover ">
                <tbody>
                  <% @stance.comments.sort!{|b,a| a.doc <=> b.doc }.each do |comment| %>
                  <tr onClick="document.location = '/comments/<%= comment.id %>';">
                    <td width="10">
                      <span class="label label-success">讚 <%= comment.likes.count %></span> 
                      <span class="label label-danger">爛 <%= comment.dislikes.count %></span>
                    </td>
                    <td><% if (comment.owner == @proxy)%>你<%else%><%=comment.owner.pseudonym%><%end%>：<span class="text-muted"><%= comment.body[0,20] %><%= "⋯⋯" if comment.body.length > 20 %></span></td>
                    <td class="text-primary hidden-xs" align="right"><% if comment.doc.strftime("%F") == Time.zone.now.strftime("%F") %>今天 <%= comment.doc.strftime("%T") %><% else %><%= comment.doc.strftime("%F") %><% end %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

          </div> <!-- tab-content -->
          <% end %>

        </div> <!-- panel-body -->

      </div> <!-- panel -->

    </div> <!-- bs-component -->
  </div> <!-- col -->
</div> <!-- row -->